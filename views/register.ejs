<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - CloudDrive</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .gradient-bg { background: linear-gradient(135deg, #181c2f 0%, #232946 100%); }
        .glass-effect { backdrop-filter: blur(12px); background: rgba(36, 40, 59, 0.85); border: 1.5px solid #232946; }
        .animate-float { animation: float 6s ease-in-out infinite; }
        @keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-20px); } }
        .form-input:focus { box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1); }
        .password-strength { transition: all 0.3s ease; }
        .custom-btn {
            background: linear-gradient(90deg, #a5b4fc 0%, #6c63ff 100%);
            color: #181c2f;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            transition: background 0.2s, transform 0.2s;
        }
        .custom-btn:hover {
            background: linear-gradient(90deg, #6c63ff 0%, #a5b4fc 100%);
            color: #fff;
            transform: scale(1.04);
        }
        .custom-link {
            color: #a5b4fc;
            font-weight: 500;
        }
        .custom-link:hover {
            color: #fff;
            text-decoration: underline;
        }
        .divider {
            border-top: 1px solid #232946;
        }
        .social-btn {
            background: #232946;
            border: 1px solid #393e5c;
            color: #e0e6f7;
            transition: background 0.2s, color 0.2s;
        }
        .social-btn:hover {
            background: #393e5c;
            color: #a5b4fc;
        }
        .input-dark {
            background: rgba(36,40,59,0.18);
            border: 1.5px solid #393e5c;
            color: #e0e6f7;
        }
        .input-dark:focus {
            border: 2px solid #a5b4fc;
            color: #fff;
        }
        .input-icon {
            color: #a5b4fc;
        }
        /* 3D Input Styles (from login) */
        .input-3d-container {
            display: flex;
            flex-direction: column;
            gap: 7px;
            position: relative;
            color: #e0e6f7;
            margin-bottom: 1.5rem;
        }
        .input-3d-label {
            font-size: 15px;
            padding-left: 10px;
            position: absolute;
            top: 13px;
            transition: 0.3s;
            pointer-events: none;
            color: #b8c1ec;
        }
        .input-3d {
            width: 100%;
            height: 45px;
            border: none;
            outline: none;
            padding: 0px 7px;
            border-radius: 6px;
            color: #e0e6f7;
            font-size: 15px;
            background-color: transparent;
            box-shadow: 3px 3px 10px rgba(0,0,0,0.7),
            -1px -1px 6px rgba(36, 40, 59, 0.4);
            background: rgba(36,40,59,0.18);
        }
        .input-3d:focus {
            border: 2px solid #a5b4fc;
            color: #fff;
            box-shadow: 3px 3px 10px rgba(0,0,0,0.9),
            -1px -1px 6px rgba(165, 180, 252, 0.2),
            inset 3px 3px 10px rgba(0,0,0,0.7),
            inset -1px -1px 6px rgba(165, 180, 252, 0.2);
        }
        .input-3d:valid ~ .input-3d-label,
        .input-3d:focus ~ .input-3d-label {
            transition: 0.3s;
            padding-left: 2px;
            transform: translateY(-35px);
            font-size: 13px;
            color: #a5b4fc;
        }
        .input-3d:valid,
        .input-3d:focus {
            box-shadow: 3px 3px 10px rgba(0,0,0,0.9),
            -1px -1px 6px rgba(165, 180, 252, 0.2),
            inset 3px 3px 10px rgba(0,0,0,0.7),
            inset -1px -1px 6px rgba(165, 180, 252, 0.2);
        }
    </style>
</head>
<body class="gradient-bg min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Logo and Title -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-[#232946] rounded-2xl shadow-lg mb-4 border-2 border-[#a5b4fc]">
                <!-- Custom SVG Icon for CloudDrive -->
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <ellipse cx="24" cy="30" rx="16" ry="10" fill="#a5b4fc" fill-opacity="0.18"/>
                  <ellipse cx="24" cy="24" rx="14" ry="9" fill="#6c63ff" fill-opacity="0.22"/>
                  <path d="M16 30c-2.5-7 2-14 8-14s10.5 7 8 14" stroke="#a5b4fc" stroke-width="2.5" fill="none"/>
                  <ellipse cx="24" cy="28" rx="10" ry="6" fill="#a5b4fc" fill-opacity="0.35"/>
                  <ellipse cx="24" cy="26" rx="7" ry="4" fill="#6c63ff" fill-opacity="0.5"/>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-white mb-2">Join CloudDrive</h1>
            <p class="text-blue-100">Create your free account and start storing files securely</p>
        </div>

        <!-- Register Form -->
        <div class="glass-effect rounded-2xl p-8 shadow-2xl">
            <form action="/user/register" method="post" class="space-y-6" id="registerForm">
                <!-- Username Field (standard) -->
                <div>
                    <label for="username" class="block text-sm font-medium text-white mb-2">
                        <i class="fas fa-user mr-2 input-icon"></i>Username
                    </label>
                    <div class="relative">
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            class="w-full px-4 py-3 input-dark rounded-lg placeholder-blue-200 focus:outline-none focus:border-white/40 form-input transition-all duration-300"
                            placeholder="Choose a username"
                            minlength="3"
                            maxlength="20"
                            required
                        />
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i class="fas fa-user text-blue-200"></i>
                        </div>
                    </div>
                    <p class="text-xs text-blue-200 mt-1">3-20 characters, letters and numbers only</p>
                </div>
                <!-- Email Field (3D) -->
                <div class="input-3d-container">
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="input-3d" 
                        required
                        autocomplete="username"
                        placeholder=" "
                    />
                    <label for="email" class="input-3d-label"><i class="fas fa-envelope mr-2 input-icon"></i>Email Address</label>
                </div>
                <!-- Password Field (3D) -->
                <div class="input-3d-container">
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="input-3d" 
                        required
                        minlength="5"
                        autocomplete="new-password"
                        onkeyup="checkPasswordStrength()"
                        placeholder=" "
                    />
                    <label for="password" class="input-3d-label"><i class="fas fa-lock mr-2 input-icon"></i>Password</label>
                    <button 
                        type="button" 
                        style="position:absolute; right:10px; top:10px; background:none; border:none; color:#a5b4fc; z-index:2;"
                        onclick="togglePassword('password')"
                        tabindex="-1"
                    >
                        <i id="password-icon" class="fas fa-eye"></i>
                    </button>
                </div>
                <!-- Password Strength Indicator -->
                <div class="mt-2">
                    <div class="flex space-x-1">
                        <div id="strength-1" class="h-1 flex-1 rounded-full bg-gray-300"></div>
                        <div id="strength-2" class="h-1 flex-1 rounded-full bg-gray-300"></div>
                        <div id="strength-3" class="h-1 flex-1 rounded-full bg-gray-300"></div>
                        <div id="strength-4" class="h-1 flex-1 rounded-full bg-gray-300"></div>
                    </div>
                    <p id="strength-text" class="text-xs text-blue-200 mt-1">Password strength</p>
                </div>
                <!-- Confirm Password Field (3D) -->
                <div class="input-3d-container">
                    <input 
                        type="password" 
                        id="confirmPassword" 
                        name="confirmPassword" 
                        class="input-3d" 
                        required
                        autocomplete="new-password"
                        onkeyup="checkPasswordMatch()"
                        placeholder=" "
                    />
                    <label for="confirmPassword" class="input-3d-label"><i class="fas fa-lock mr-2 input-icon"></i>Confirm Password</label>
                    <button 
                        type="button" 
                        style="position:absolute; right:10px; top:10px; background:none; border:none; color:#a5b4fc; z-index:2;"
                        onclick="togglePassword('confirmPassword')"
                        tabindex="-1"
                    >
                        <i id="confirm-password-icon" class="fas fa-eye"></i>
                    </button>
                </div>
                <p id="password-match" class="text-xs text-blue-200 mt-1"></p>
                <!-- Terms and Conditions -->
                <div class="flex items-start">
                    <input 
                        type="checkbox" 
                        id="terms" 
                        class="mt-1 rounded border-[#393e5c] bg-[#232946] text-blue-400 focus:ring-blue-500"
                        required
                    >
                    <label for="terms" class="ml-2 text-sm text-blue-100">
                        I agree to the 
                        <a href="#" class="custom-link">Terms of Service</a> 
                        and 
                        <a href="#" class="custom-link">Privacy Policy</a>
                    </label>
                </div>
                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="w-full custom-btn py-3 px-4 mt-2"
                    id="submitBtn"
                >
                    <i class="fas fa-user-plus mr-2"></i>Create Account
                </button>
            </form>

            <!-- Divider -->
            <div class="my-6 flex items-center">
                <div class="flex-1 divider"></div>
                <span class="px-4 text-sm text-blue-200">or</span>
                <div class="flex-1 divider"></div>
            </div>

            <!-- Social Register Buttons -->
            <div class="space-y-3">
                <a href="/user/auth/google" class="w-full social-btn py-3 px-4 rounded-lg font-medium flex items-center justify-center">
                    <i class="fab fa-google mr-2"></i>Sign up with Google
                </a>
                <a href="/user/auth/github" class="w-full social-btn py-3 px-4 rounded-lg font-medium flex items-center justify-center">
                    <i class="fab fa-github mr-2"></i>Sign up with GitHub
                </a>
            </div>

            <!-- Sign In Link -->
            <div class="mt-6 text-center">
                <p class="text-blue-100">
                    Already have an account? 
                    <a href="/user/login" class="custom-link font-semibold transition-colors">
                        Sign in here
                    </a>
                </p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(fieldId) {
            const passwordInput = document.getElementById(fieldId);
            const iconId = fieldId === 'password' ? 'password-icon' : 'confirm-password-icon';
            const passwordIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        }

        function checkPasswordStrength() {
            const password = document.getElementById('password').value;
            const strength1 = document.getElementById('strength-1');
            const strength2 = document.getElementById('strength-2');
            const strength3 = document.getElementById('strength-3');
            const strength4 = document.getElementById('strength-4');
            const strengthText = document.getElementById('strength-text');
            
            let strength = 0;
            let text = '';
            let color = '';
            
            if (password.length >= 5) strength++;
            if (password.length >= 8) strength++;
            if (/[A-Z]/.test(password) && /[a-z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            
            // Reset all bars
            [strength1, strength2, strength3, strength4].forEach(bar => {
                bar.className = 'h-1 flex-1 rounded-full bg-gray-300';
            });
            
            // Color the bars based on strength
            if (strength >= 1) {
                strength1.className = 'h-1 flex-1 rounded-full bg-red-400';
                color = 'text-red-400';
                text = 'Weak';
            }
            if (strength >= 2) {
                strength2.className = 'h-1 flex-1 rounded-full bg-yellow-400';
                color = 'text-yellow-400';
                text = 'Fair';
            }
            if (strength >= 3) {
                strength3.className = 'h-1 flex-1 rounded-full bg-blue-400';
                color = 'text-blue-400';
                text = 'Good';
            }
            if (strength >= 4) {
                strength4.className = 'h-1 flex-1 rounded-full bg-green-400';
                color = 'text-green-400';
                text = 'Strong';
            }
            
            strengthText.className = `text-xs ${color} mt-1`;
            strengthText.textContent = text;
        }

        function checkPasswordMatch() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const matchText = document.getElementById('password-match');
            const submitBtn = document.getElementById('submitBtn');
            
            if (confirmPassword === '') {
                matchText.textContent = '';
                matchText.className = 'text-xs text-blue-200 mt-1';
                submitBtn.disabled = false;
                return;
            }
            
            if (password === confirmPassword) {
                matchText.textContent = '✓ Passwords match';
                matchText.className = 'text-xs text-green-400 mt-1';
                submitBtn.disabled = false;
            } else {
                matchText.textContent = '✗ Passwords do not match';
                matchText.className = 'text-xs text-red-400 mt-1';
                submitBtn.disabled = true;
            }
        }

        // Add floating animation to form
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.glass-effect');
            form.classList.add('animate-float');
        });

        // Form validation
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return false;
            }
        });
    </script>
</body>
</html>